<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      * {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
html {
  font-size: 16px;
}
ul,
li {
  list-style: none;
}
a {
  text-decoration: none;
}
header {
  width: 100%;
  background-color: #fff;
  height: 60px;
  box-shadow: 0 0 12px rgba(0, 0, 0, 0.7);
  ul {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    li {
      margin-right: 24px;
      a {
        padding: 12px;
        font-size: 20px;
        font-weight: 800;
        transition: all 0.3s ease-in-out;
        border-radius: 6px;
        &:hover {
          background-color: #f0f0f0;
        }
        &.active {
          background-color: #f0f0f0;
        }
      }
    }
  }
}
form {
  padding: 24px;
  border: 1px solid #ccc;
  border-radius: 8px;
  margin: 30px auto;
  box-shadow: 0 0 12px rgba(0, 0, 0, 0.7);
  width: 600px;
  max-width: 100%;
  .form-group {
    margin-bottom: 24px;
  }
  button {
    width: 100%;
  }
}

    </style>
  </head>
  <body>
    <header>
      <ul>
        <li>
          <a href="/">Home</a>
        </li>
        <li>
          <a href="/list">Admin</a>
        </li>
        <li>
          <a href="/register">Register</a>
        </li>
        <li>
          <a href="/login">Login</a>
        </li>
      </ul>
    </header>
    <table class="table table-striped">
      <h1 class="text-center mt-4">List Product</h1>
      <a class="btn btn-primary" href="/create">Add New Product</a>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Price</th>
          <th>Description</th>
          <th>Image</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach((p) => { %>
        <tr>
          <td><%= p.id %></td>
          <td><%= p.name %></td>
          <td><%= p.price %></td>
          <td><%= p.description %></td>
          <td>
            <img src="/uploads/<%= p.image %>" style="height: 100px" alt="" />
          </td>
          <td>
            <a class="btn btn-primary" href="/edit/<%= p.id %>">Edit</a>
            <a
              class="btn btn-danger"
              href="/delete/<%= p.id %>"
              onclick="return confirm('Are u sure u want delete ?')"
              >Delete</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    
</html>
